<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/coinIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/coinIcon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coinName"
            fontPath="@string/font_lato_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0.45"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:ignore="MissingPrefix"
            tools:text="Bitcoin" />

        <TextView
            android:id="@+id/coinUSD"
            fontPath="@string/font_lato_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="0.35"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_normal"
            tools:ignore="MissingPrefix"
            tools:text="$10,244" />

        <TextView
            android:id="@+id/coinValorization"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="@dimen/text_normal"
            tools:text="(10,023%)" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/top"
        android:layout_alignRight="@id/top"
        android:layout_below="@id/top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coinSymbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:textAllCaps="true"
            android:textSize="@dimen/text_normal"
            tools:text="BTC" />

        <TextView
            android:id="@+id/coinBtcValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:textSize="@dimen/text_normal"
            tools:text="0.0000052" />
    </LinearLayout>
</RelativeLayout>